<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text layout styles -->
    <style name="m_text_layout_material_style">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/m_text_layout_height</item>
        <item name="android:paddingLeft">@dimen/m_text_layout_vertical_padding</item>
        <item name="android:paddingRight">@dimen/m_text_layout_vertical_padding</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="m_text_layout_primary_text_material_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/m_black_87</item>
        <item name="android:textSize">@dimen/m_text_layout_primary_text_size</item>
    </style>

    <style name="m_text_layout_secondary_text_material_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/m_black_26</item>
        <item name="android:textColor">@color/m_black_54</item>
        <item name="android:textSize">@dimen/m_text_layout_secondary_text_size</item>
    </style>
</resources>