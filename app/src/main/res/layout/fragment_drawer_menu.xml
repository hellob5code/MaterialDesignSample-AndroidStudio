<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/m_primary_color500">

        <ImageButton style="@style/m_drawer_menu_user_avatar_style" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ratio16x9" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/m_drawer_menu_user_info_height"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/m_drawer_menu_margin"
            android:layout_marginRight="@dimen/m_drawer_menu_margin">

            <Button
                style="@style/m_drawer_menu_user_email_style"
                android:drawableEnd="@android:drawable/arrow_down_float"
                android:drawableRight="@android:drawable/arrow_down_float"
                android:text="@string/app_name" />

        </FrameLayout>

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/drawer_menu_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

</LinearLayout>