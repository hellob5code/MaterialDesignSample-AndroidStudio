<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/m_white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/m_toolbar_height"
            android:background="@color/m_primary_color500">

            <ImageButton
                android:id="@+id/toolbar_navigate_button"
                style="@style/m_toolbar_navigate_button_style"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@android:drawable/ic_menu_help" />

            <TextView
                android:id="@+id/toolbar_title_text"
                style="@style/m_toolbar_title_text_style"
                android:textColor="@color/m_white"
                android:text="@string/app_name" />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/drawer_content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/drawer_menu_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/m_white" />
</android.support.v4.widget.DrawerLayout>