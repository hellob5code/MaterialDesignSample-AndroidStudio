<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/m_dialog_width"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/m_dialog_text_margin">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/dialog_title_layout"
            style="@style/m_dialog_title_layout_material_style"
            android:visibility="gone">

            <TextView
                android:id="@+id/dialog_title_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:textStyle="bold" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="@android:color/darker_gray" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/dialog_selection_layout"
        style="@style/m_dialog_list_layout_material_style">

        <ListView
            android:id="@+id/dialog_selection_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="top"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/dialog_button_layout"
            style="@style/m_dialog_button_layout_material_style">

            <com.jp.materialdesignsample.view.material.MaterialButton
                android:id="@+id/dialog_negative_button"
                style="@style/m_light_primary_flat_button_material_style"
                android:text="CANCEL" />

        </LinearLayout>
    </FrameLayout>

</LinearLayout>